<section data-section-id="register" data-section-type="register">
    <div class="container">
        <!-- ws--loginfrom-section-start ==========================-->
        <div  class="ws--page-content ws--page-content-fit-screen ws--page-content-extra-narrow">
            {%- comment -%}
            --------------------------------------------------------------------------------------------------------------------
            CUSTOMER REGISTER FORM - START
            --------------------------------------------------------------------------------------------------------------------
            {%- endcomment -%}
            {%- form 'create_customer', name: 'create_customer', class: 'ws--form', id: 'create_customer' -%}
                <div class=" ws--form-heading text-center mb-6">
                    <h2 class="ws--h1 ws--heading">{{ 'customer.register.title' | t }}</h2>
                    <p  class="ws--text mt-3">{{ 'customer.register.description' | t }}</p>
                </div>
                
                <div class="ws--form-item">
                    <input type="text" class="form-control {% if form.errors contains 'first_name' %}is-invalid{% endif %}" name="customer[first_name]" placeholder="{{ 'customer.register.first_name' | t }}" autofocus>
                    {% if form.errors contains 'first_name' %}
                      <div class="alert alert-danger d-flex align-items-center" role="alert">
                        {{ form.errors.translated_fields['first_name'] | capitalize }} {{ form.errors.messages['first_name'] }}
                      </div>
                    {% endif %}
                </div>
                
                <div class="ws--form-item">
                    <input type="text" class="form-control {% if form.errors contains 'last_name' %}is-invalid{% endif %}" name="customer[last_name]" placeholder="{{ 'customer.register.last_name' | t }}">
                    {% if form.errors contains 'last_name' %}
                      <div class="alert alert-danger d-flex align-items-center" role="alert">
                        {{ form.errors.translated_fields['last_name'] | capitalize }} {{ form.errors.messages['last_name'] }}
                      </div>
                    {% endif %}
                </div>

                <div class="ws--form-item">
                    <input type="text" class="form-control {% if form.errors contains 'email' %}is-invalid{% endif %}" name="customer[email]" placeholder="{{ 'customer.register.email' | t }}" required="required">
                    {% if form.errors contains 'email' %}
                      <div class="alert alert-danger d-flex align-items-center" role="alert">
                        {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
                      </div>
                    {% endif %}
                </div>

                <div class="ws--form-item">
                    <input type="password" class="form-control {% if form.errors contains 'password' %}is-invalid{% endif %}" name="customer[password]" placeholder="{{ 'customer.register.password' | t }}" required="required">
                    {% if form.errors contains 'password' %}
                      <div class="alert alert-danger d-flex align-items-center" role="alert">
                        {{ form.errors.translated_fields['password'] | capitalize }} {{ form.errors.messages['password'] }}
                      </div>
                    {% endif %}
                </div>

                <div class="ws--login-btn">  
                  <button type="submit" class="ws--btn ws--btn-primary ws--btn-full">{{ 'customer.register.submit' | t }}</button>
                </div>
            {%- endform -%}
        </div>
    </div>
</section>