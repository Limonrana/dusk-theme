<section class="{% if section.settings.image_size == 'fill' %}ws--container{% else %}container{% endif %} my-10">
    <div class="ws--product-wrapper ws--product-{{ section.settings.image_size }}{% if section.settings.enable_sticky == true %} ws--sticky-section{% endif %}">
      <!-- All the content goes here. -->
       <div class="row">
            <div class="{% if section.settings.image_size == 'fill' %}col-lg-9{% else %}col-lg-8{% endif %}">
                <media-gallery class="ws--media-wrapper">
                    {%- assign featured_media = product.selected_or_first_available_variant.featured_media -%}
                    <div class="ws--thumbnail-media">
                        <ul class="ws--thumbnail-list">
                            {%- if featured_media != null -%}
                                <li class="ws--thumbnail-item active">
                                    <img id="Thumbnail-{{ section.id }}-{{ forloop.index }}"
                                        srcset="{% if featured_media.preview_image.width >= 59 %}{{ featured_media.preview_image | image_url: width: 59 }} 59w,{% endif %}
                                                {% if featured_media.preview_image.width >= 118 %}{{ featured_media.preview_image | image_url: width: 118 }} 118w,{% endif %}
                                                {% if featured_media.preview_image.width >= 84 %}{{ featured_media.preview_image | image_url: width: 84 }} 84w,{% endif %}
                                                {% if featured_media.preview_image.width >= 168 %}{{ featured_media.preview_image | image_url: width: 168 }} 168w,{% endif %}
                                                {% if featured_media.preview_image.width >= 130 %}{{ featured_media.preview_image | image_url: width: 130 }} 130w,{% endif %}
                                                {% if featured_media.preview_image.width >= 260 %}{{ featured_media.preview_image | image_url: width: 260 }} 260w{% endif %}"
                                        src="{{ featured_media | image_url: width: 84, height: 84 }}"
                                        sizes="(min-width: 1200px) calc((1200px - 19.5rem) / 12), (min-width: 750px) calc((100vw - 16.5rem) / 8), calc((100vw - 8rem) / 5)"
                                        alt="{{ featured_media.alt | escape }}"
                                        height="200"
                                        width="200"
                                        loading="lazy"
                                    >
                                </li>
                            {%- endif -%}
                            {%- for media in product.media -%}
                                {%- unless media.id == product.selected_or_first_available_variant.featured_media.id -%}
                                    <li class="ws--thumbnail-item">
                                        <img id="Thumbnail-{{ section.id }}-{{ forloop.index }}"
                                            srcset="{% if media.preview_image.width >= 59 %}{{ media.preview_image | image_url: width: 59 }} 59w,{% endif %}
                                                    {% if media.preview_image.width >= 118 %}{{ media.preview_image | image_url: width: 118 }} 118w,{% endif %}
                                                    {% if media.preview_image.width >= 84 %}{{ media.preview_image | image_url: width: 84 }} 84w,{% endif %}
                                                    {% if media.preview_image.width >= 168 %}{{ media.preview_image | image_url: width: 168 }} 168w,{% endif %}
                                                    {% if media.preview_image.width >= 130 %}{{ media.preview_image | image_url: width: 130 }} 130w,{% endif %}
                                                    {% if media.preview_image.width >= 260 %}{{ media.preview_image | image_url: width: 260 }} 260w{% endif %}"
                                            src="{{ media | image_url: width: 84, height: 84 }}"
                                            sizes="(min-width: 1200px) calc((1200px - 19.5rem) / 12), (min-width: 750px) calc((100vw - 16.5rem) / 8), calc((100vw - 8rem) / 5)"
                                            alt="{{ media.alt | escape }}"
                                            height="200"
                                            width="200"
                                            loading="lazy"
                                        >
                                    </li>
                                {%- endunless -%}
                            {%- endfor -%}
                        </ul>
                    </div>
                    <div class="ws--slider-media">
                        <ul class="ws--slider-list">
                            {%- if featured_media != null -%}
                                <li class="ws--slider-item active">
                                    {% render 'preview-image', media: featured_media, lazy_load: false %}
                                </li>
                            {%- endif -%}
                            {%- for media in product.media -%}
                                {%- unless media.id == product.selected_or_first_available_variant.featured_media.id -%}
                                    <li class="ws--slider-item">
                                        {%- liquid
                                            assign media_position = media_position | default: 0 | plus: 1
                                            assign lazy_load = false
                                            if media_position > 1
                                            assign lazy_load = true
                                            endif
                                            render 'preview-image', media: featured_media, lazy_load: lazy_load 
                                        %}
                                    </li>
                                {%- endunless -%}
                            {%- endfor -%}
                        </ul>
                    </div>
                </media-gallery>
            </div>
          <!-- ws--product-details -->
          <div class="{% if section.settings.image_size == 'fill' %}col-lg-3{% else %}col-lg-4{% endif %}">
           <div class="ws--product-details">
              <div class="ws--productDetails-top">
                <div class="ws--product-title">
